<ul class="media-list">
  <% tasks.each do |task| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      </div>
      
      <div class="media-body">
        <div>
        
        </div>
        <div>
          <p><%=task.status %></p>
          <p><%=task.content %></p>
        <div>
          <%if current_user == task.user %>
          <%= link_to "Detail",task_path(task.id), class:'btn btn-info btn-xs' %>
          <%= link_to "Delete",task, method: :delete, data: { confirm: "You sure?" }, class:'btn btn-danger btn-xs' %>
          <%= link_to "EDIT",edit_task_path(task.id), class:'btn btn-info btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>
